<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectLineActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_header"
        android:layout_width="match_parent"
        android:layout_height="44.0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="请选择线路"
        >
        <TextView
            android:id="@+id/tv_line_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新线路"
            android:layout_gravity="end"
            android:layout_marginRight="16.0dp"
            />
        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测速"
            android:layout_gravity="end"
            android:layout_marginRight="16.0dp"
            />
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tool_header"
        android:layout_marginHorizontal="16.0dp"
        android:layout_marginTop="12.0dp"
        />
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="44.0dp"
        android:textColor="@color/black"
        android:text="确认"
        app:layout_constraintTop_toBottomOf="@id/rv_line"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16.0dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>