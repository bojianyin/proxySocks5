<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_item_line"
    android:paddingHorizontal="11dp"
    android:layout_marginBottom="8dp"
    >

    <ImageView
        android:id="@+id/rb_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_uncheck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_line_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/rb_item"
        app:layout_constraintStart_toEndOf="@+id/rb_item"
        app:layout_constraintTop_toTopOf="@+id/rb_item"
        android:layout_marginLeft="12.0dp"
        android:textSize="16.0sp"
        android:textColor="@color/black"
        tools:text="线路1" />

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/rb_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rb_item"
        android:textColor="#ACACAC"
        tools:text="200ms"
        />


</androidx.constraintlayout.widget.ConstraintLayout>